---
import ContactForm from '../ui/ContactForm.astro';

interface Props {
  locale: 'en' | 'es';
  t: (key: string) => string;
}

const { locale, t } = Astro.props;
---

<section id="contact" class="bg-slate-800 px-4 py-16 text-white dark:bg-slate-900 sm:px-6 sm:py-20 md:py-28" aria-labelledby="contact-heading">
  <div class="mx-auto max-w-5xl">
    <p class="text-xs font-medium uppercase tracking-wider text-slate-400">{t('section.connect')}</p>
    <h2 id="contact-heading" class="mt-2 text-3xl font-bold text-white md:text-4xl">
      {t('contact.title')}
    </h2>
    <p class="mt-3 text-slate-300">{t('contact.subtext')}</p>
    <div class="mt-12 [&_label]:text-slate-300 [&_input]:border-slate-600 [&_input]:bg-slate-700 [&_input]:text-white [&_input]:placeholder:text-slate-400 [&_textarea]:border-slate-600 [&_textarea]:bg-slate-700 [&_textarea]:text-white [&_textarea]:placeholder:text-slate-400 [&_button]:bg-white [&_button]:text-slate-900 [&_button:hover]:bg-slate-100">
      <ContactForm t={t} successMessage={t('contact.success')} errorMessage={t('contact.error')} />
    </div>
  </div>
</section>
