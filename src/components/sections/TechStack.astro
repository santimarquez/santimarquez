---
import { techStack, type TechStackCategory } from '../../data/techStack';

interface Props {
  locale: 'en' | 'es';
  t: (key: string) => string;
}

const { locale, t } = Astro.props;
const categoryKeys: TechStackCategory[] = ['architecture', 'backend', 'frontend', 'devops', 'data'];
const categoryIcons: Record<TechStackCategory, string> = {
  architecture: '◇',
  backend: '▣',
  frontend: '⊞',
  devops: '☁',
  data: '◈',
};
---

<section id="stack" class="px-6 py-20 md:py-28" aria-labelledby="stack-heading">
  <div class="mx-auto max-w-5xl">
    <p class="text-xs font-medium uppercase tracking-wider text-charcoal-light dark:text-slate-500">{t('section.capabilities')}</p>
    <h2 id="stack-heading" class="mt-2 text-3xl font-bold text-charcoal dark:text-slate-100 md:text-4xl">
      {t('stack.title')}
    </h2>
    <div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {categoryKeys.map((cat) => (
        <div
          class="tech-card rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition hover:border-slate-300 hover:shadow dark:border-slate-700 dark:bg-slate-800/50 dark:hover:border-slate-600"
          data-category={cat}
        >
          <div class="mb-4 flex h-10 w-10 items-center justify-center rounded bg-accent/10 text-accent" aria-hidden="true">
            <span class="text-lg">{categoryIcons[cat]}</span>
          </div>
          <h3 class="text-base font-bold text-charcoal dark:text-slate-100">
            {t(`stack.${cat}`)}
          </h3>
          <div class="mt-4 flex flex-wrap gap-2" role="list">
            {techStack[cat].map((tech) => (
              <span class="rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs font-medium text-charcoal-light dark:border-slate-600 dark:bg-slate-700/50 dark:text-slate-300">{tech}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
<script>
  import { animate } from 'motion';
  document.querySelectorAll('.tech-card').forEach((el) => {
    el.addEventListener('mouseenter', () => {
      animate(el, { scale: 1.02 }, { duration: 0.2, ease: 'easeOut' });
    });
    el.addEventListener('mouseleave', () => {
      animate(el, { scale: 1 }, { duration: 0.2, ease: 'easeOut' });
    });
  });
</script>
