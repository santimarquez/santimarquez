---
import { getRelativeLocaleUrl } from 'astro:i18n';
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  locale: 'en' | 'es';
  t: (key: string) => string;
}

const { locale, t } = Astro.props;
const enUrl = getRelativeLocaleUrl('en', '/');
const esUrl = getRelativeLocaleUrl('es', '/');
---

<header class="fixed top-0 left-0 right-0 z-50 border-b border-slate-200/80 bg-offwhite/95 backdrop-blur dark:border-slate-700 dark:bg-slate-900/95">
  <nav class="mx-auto flex max-w-5xl items-center justify-between px-4 py-4 sm:px-6 sm:py-5" aria-label="Main">
    <a href={locale === 'en' ? enUrl : esUrl} class="flex items-center gap-2 text-lg font-semibold text-charcoal dark:text-slate-100">
      <svg class="h-8 w-8 flex-shrink-0 rounded-lg" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <rect width="64" height="64" rx="9" fill="#1F2933" class="dark:fill-slate-100" />
        <text x="50%" y="54%" text-anchor="middle" dominant-baseline="middle" font-family="Inter, system-ui, sans-serif" font-size="36" font-weight="700" fill="#F9FAFB" class="dark:fill-charcoal">M</text>
      </svg>
      <span class="hidden sm:inline">Santi MÃ¡rquez</span>
    </a>

    <!-- Desktop nav -->
    <div class="hidden items-center gap-6 md:flex lg:gap-8">
      <a href="#experience" class="text-sm font-normal text-charcoal-light hover:text-charcoal dark:text-slate-400 dark:hover:text-slate-200">{t('nav.experience')}</a>
      <a href="#stack" class="text-sm font-normal text-charcoal-light hover:text-charcoal dark:text-slate-400 dark:hover:text-slate-200">{t('nav.stack')}</a>
      <a href="#projects" class="text-sm font-normal text-charcoal-light hover:text-charcoal dark:text-slate-400 dark:hover:text-slate-200">{t('nav.projects')}</a>
      <a href="#contact" class="text-sm font-normal text-charcoal-light hover:text-charcoal dark:text-slate-400 dark:hover:text-slate-200">{t('nav.contact')}</a>
      <span class="text-slate-300 dark:text-slate-600" aria-hidden="true">|</span>
      <div class="flex gap-2" role="group" aria-label="Language">
        <a href={enUrl} data-locale="en" class:list={['text-sm font-normal', locale === 'en' ? 'text-accent font-medium cursor-default' : 'text-charcoal-light hover:text-charcoal dark:text-slate-400 dark:hover:text-slate-200 cursor-pointer']}>EN</a>
        <span class="text-slate-300 dark:text-slate-600" aria-hidden="true">|</span>
        <a href={esUrl} data-locale="es" class:list={['text-sm font-normal', locale === 'es' ? 'text-accent font-medium cursor-default' : 'text-charcoal-light hover:text-charcoal dark:text-slate-400 dark:hover:text-slate-200 cursor-pointer']}>ES</a>
      </div>
      <ThemeToggle />
    </div>

    <!-- Mobile: hamburger + lang + theme -->
    <div class="flex items-center gap-3 md:hidden">
      <div class="flex gap-2" role="group" aria-label="Language">
        <a href={enUrl} data-locale="en" class:list={['text-sm', locale === 'en' ? 'font-medium text-accent cursor-default' : 'text-charcoal-light dark:text-slate-400 cursor-pointer']}>EN</a>
        <span class="text-slate-300 dark:text-slate-600">|</span>
        <a href={esUrl} data-locale="es" class:list={['text-sm', locale === 'es' ? 'font-medium text-accent cursor-default' : 'text-charcoal-light dark:text-slate-400 cursor-pointer']}>ES</a>
      </div>
      <ThemeToggle />
      <button type="button" id="nav-menu-toggle" class="rounded-lg p-2 text-charcoal hover:bg-slate-100 dark:text-slate-300 dark:hover:bg-slate-800" aria-expanded="false" aria-controls="nav-menu" aria-label="Open menu">
        <svg class="h-6 w-6 md:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile dropdown menu -->
  <div
    id="nav-menu"
    class="nav-menu border-t border-slate-200 bg-offwhite dark:border-slate-700 dark:bg-slate-900 md:hidden"
    aria-hidden="true"
    data-state="closed"
  >
    <div class="mx-auto max-w-5xl space-y-1 px-4 py-4 text-right">
      <a href="#experience" class="block rounded-lg px-4 py-3 text-right text-charcoal hover:bg-slate-100 dark:text-slate-200 dark:hover:bg-slate-800">{t('nav.experience')}</a>
      <a href="#stack" class="block rounded-lg px-4 py-3 text-right text-charcoal hover:bg-slate-100 dark:text-slate-200 dark:hover:bg-slate-800">{t('nav.stack')}</a>
      <a href="#projects" class="block rounded-lg px-4 py-3 text-right text-charcoal hover:bg-slate-100 dark:text-slate-200 dark:hover:bg-slate-800">{t('nav.projects')}</a>
      <a href="#contact" class="block rounded-lg px-4 py-3 text-right text-charcoal hover:bg-slate-100 dark:text-slate-200 dark:hover:bg-slate-800">{t('nav.contact')}</a>
    </div>
  </div>
  <script>
    document.querySelectorAll('[data-locale]').forEach((a) => {
      a.addEventListener('click', (e) => {
        const locale = (e.currentTarget as HTMLElement).dataset.locale;
        if (locale) localStorage.setItem('locale', locale);
      });
    });
    function initNavMenu() {
      const toggle = document.getElementById('nav-menu-toggle');
      const menu = document.getElementById('nav-menu');
      if (!toggle || !menu || toggle.hasAttribute('data-nav-bound')) return;
      toggle.setAttribute('data-nav-bound', 'true');
      function setMenuOpen(open: boolean) {
        menu.setAttribute('data-state', open ? 'open' : 'closed');
        menu.setAttribute('aria-hidden', String(!open));
        toggle.setAttribute('aria-expanded', String(open));
        toggle.setAttribute('aria-label', open ? 'Close menu' : 'Open menu');
      }
      toggle.addEventListener('click', () => {
        const isOpen = menu.getAttribute('data-state') === 'open';
        setMenuOpen(!isOpen);
      });
      menu.querySelectorAll('a').forEach((a) => {
        a.addEventListener('click', () => setMenuOpen(false));
      });
    }
    initNavMenu();
    document.addEventListener('astro:page-load', initNavMenu);
  </script>
</header>
