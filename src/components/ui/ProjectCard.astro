---
interface Props {
  title: string;
  description: string;
  tag?: string;
  href?: string;
  children?: unknown;
}

const { title, description, tag, href } = Astro.props;
---

{href ? (
  <a href={href} class="block overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm transition hover:border-slate-300 hover:shadow dark:border-slate-700 dark:bg-slate-800/50 dark:hover:border-slate-600">
    <div class="aspect-video w-full bg-slate-100 dark:bg-slate-700">
      <slot name="visual" />
    </div>
    <div class="p-6">
      <h3 class="text-xl font-bold text-charcoal dark:text-slate-100">{title}</h3>
      <p class="mt-2 text-sm text-charcoal-light dark:text-slate-400">{description}</p>
      {tag && (
        <span class="mt-4 inline-block rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-charcoal dark:bg-slate-700 dark:text-slate-300">
          {tag}
        </span>
      )}
    </div>
  </a>
) : (
  <article class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm dark:border-slate-700 dark:bg-slate-800/50">
    <div class="aspect-video w-full bg-slate-100 dark:bg-slate-700">
      <slot name="visual" />
    </div>
    <div class="p-6">
      <h3 class="text-xl font-bold text-charcoal dark:text-slate-100">{title}</h3>
      <p class="mt-3 text-sm text-charcoal-light dark:text-slate-400">{description}</p>
      <slot />
      {tag && (
        <span class="mt-4 inline-block rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-charcoal dark:bg-slate-700 dark:text-slate-300">
          {tag}
        </span>
      )}
    </div>
  </article>
)}
